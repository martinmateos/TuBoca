<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="TuBoca.MainPage">

    <StackLayout Orientation="Vertical">
        <!-- Place new controls here -->
        <Label Text="Bienvenido a TuVocación" FontSize="Large" 
           HorizontalOptions="Center"
           VerticalOptions="Center" />
        <Entry x:Name="Nombre" Placeholder="ingresa tu nombre" />
        <Entry x:Name="Apellido"  Placeholder="ingresa tu apellido" />
        <Button x:Name="Test" Text="Realizar el test!!!!"
                HorizontalOptions="Center"
                Clicked="Test_Clicked"/>
        <Button x:Name="Carreras" Text="Carreras y Universidades Cerca de Mi" VerticalOptions="Center" HorizontalOptions="Center"
                Clicked="Carreras_Clicked"/>

    </StackLayout>

</ContentPage>
